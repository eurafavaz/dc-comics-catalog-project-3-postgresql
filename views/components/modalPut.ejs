<section class="modal-overlay" id="overlay">
    <div class="modal" id="modal">

        <div class="modal-header">
            <h3>Update Superhero</h3>
            <a href="/" id="close-modal-put"><i class="bi bi-x-circle"></i></a>
        </div>

        <div class="modal-body">

            <form class="form-modal" action="/update/<%= characterPut.id %>" method="POST">

                <label for="name">Name:</label>
                <input type="text" id="name" name="name" value="<%= characterPut.name %>">

                <label for="alias">Alias:</label>
                <input type="text" id="alias" name="alias" value="<%= characterPut.alias %>">

                <label for="powers">Powers:</label>
                <input type="text" id="powers" name="powers" value="<%= characterPut.powers %>">

                <label for="description">Description:</label>
                <input type="text" id="description" name="description" value="<%= characterPut.description %>">

                <label for="image">Image link:</label>
                <input type="url" id="image" name="image" value="<%= characterPut.image %>">

                <button id="btnSend" type="submit">Update now</button>
            
            </form>

        </div>

    </div>
       
</section>